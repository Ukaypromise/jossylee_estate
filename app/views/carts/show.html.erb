<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

  <div class="">
      <%= link_to 'Keep shopping', property_path, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>

    <%= render(@cart.line_items) %>

    <div class="inline-block ml-2">
      <%= button_to 'Empty Cart', cart_path(@cart), method: :delete, data:{comfirm: "Are You Sure?"}, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <span> Total: </span> <span class="font-semibold">N<%= number_to_currency(@cart.total_price) %></span>
  </div>
</div>
