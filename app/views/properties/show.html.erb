<div class="mx-auto md:w-2/3 w-full">
  <div class="mx-auto">
    <div>
      <%= render @property %>
    </div>
    <div class="mt-2">
      <div class="inline-block">
        <%= button_to 'Destroy this property', property_path(@property), method: :delete, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium mt-2" %>
        <%= link_to 'Edit this property', edit_property_path(@property), class: "rounded-lg py-3 px-5 bg-gray-100 font-medium mt-2" %>
        <%= link_to 'Back to properties', properties_path, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium mt-2 mb-2" %>
      </div>
    </div>
  </div>
</div>
