


<div class="flex h-screen flex-col justify-center place-items-center  ">
<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm z-10 bg-white rounded-md px-6 py-12 lg:px-8">
      <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <%#= image_tag "H-logo-alt-32.png", alt:"Hemingway", class:"mx-auto h-10 w-auto" %>
        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sigup for an account </h2>
      </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"space-y-6" ) do |f| %>
      <div class="mt-2">
        <%= f.label :first_name, class:"block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "email", class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div class="mt-2">
        <%= f.label :last_name, class:"block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>
      
      
      <div class="mt-2">
        <%= f.label :email, class:"block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between class="mt-2"">
            <%= f.label :password, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="text-sm">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
        </div>
        <div class="mt-2">
            <%= f.password_field :password, autocomplete: "new-password", class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            <% if @user.errors[:password].any? %>
              <div class="text-red-500 text-sm mt-2 p-2 border border-red-500 bg-red-100 rounded">
                <%= @user.errors[:password].first %>
              </div>
            <% end %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
            <%= f.label :password_confirmation, class:"block text-sm font-medium leading-6 text-gray-900" %>
          <div class="text-sm">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
        </div>
        <div class="mt-2">
            <%= f.password_field :password_confirmation, class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <%= f.submit "Sign up", class:"mt-4 flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    <% end %>
    <div class="mt-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  </div>

<div class=" hidden w-0 max-h-screen flex-1 lg:block">
    <img class="absolute inset-0 w-full h-screen object-cover" src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="">
</div>


