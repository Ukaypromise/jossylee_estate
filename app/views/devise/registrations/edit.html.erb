<div class="flex items-center justify-center min-h-screen">
  <div class="w-full max-w-md">
    <h2 class="text-center font-bold text-2xl mb-6">Edit <%= @user.email %> Account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 text-blue-500">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %> <i class="text-gray-500 text-xs">(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
        <% if @minimum_password_length %>
          <br />
          <em class="text-gray-500 text-xs"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
        <% if @user.errors[:password].any? %>
          <div class="text-red-500 text-sm mt-2 p-2 border border-red-500 bg-red-100 rounded">
            <%= @user.errors[:password].first %>
          </div>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, class: 'block text-gray-700 text-sm font-bold mb-2' %> <i class="text-gray-500 text-xs">(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Update", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      </div>
    <% end %>

    <h3 class="text-center font-bold text-xl mt-6">Cancel my account</h3>

    <div class="mt-4 text-center">
      Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="mt-4 text-center">
      <%= link_to "Back", :back, class: 'text-blue-500 hover:text-blue-700' %>
    </div>
  </div>
</div>