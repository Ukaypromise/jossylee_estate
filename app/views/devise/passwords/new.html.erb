<div class="flex h-screen flex-col justify-center place-items-center  ">
<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm z-10 bg-white rounded-md px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%#= image_tag "H-logo-alt-32.png", alt:"Hemingway", class:"mx-auto h-10 w-auto" %>
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Forget Password</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-6 mx-auto ' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: ' shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
    </div>

    <div class="flex flex-col justify-center ">
      <%= f.submit "Reset my password", class: 'bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer' %>
      <p class="text-center mt-2 text-gray-700 font-semibold">Weâ€™ll email you a password reset link.</p>
    </div>
  <% end %>
  <div class="mb-8 mt-8">
  <%= render "devise/shared/links" %>
  </div>
  </div>
</div>
<div class=" hidden w-0 max-h-screen flex-1 lg:block">
    <img class="absolute inset-0 w-full h-screen object-cover" src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="">
</div>